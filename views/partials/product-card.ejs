<div class="group">

  <!-- Image -->
  <div class="aspect-[4/5] mb-6 overflow-hidden rounded-xl bg-zinc-100">
    <img src="<%= image || '/images/placeholder.jpg' %>"
         alt="<%= title %>"
         class="w-full h-full object-cover transition duration-700 group-hover:scale-105">
  </div>

  <!-- Title -->
  <h3 class="text-lg md:text-xl font-medium tracking-tight mb-2 group-hover:text-pink-400 transition">
    <%= title %>
  </h3>

  <!-- Description -->
  <p class="text-zinc-500 text-sm leading-relaxed mb-4">
    <%= description %>
  </p>

  <!-- Price -->
  <p class="mb-5 text-sm tracking-wide uppercase text-zinc-700">
    Starting <span class="font-medium"><%= price %></span>
  </p>

  <!-- Button -->
  <a href="https://wa.me/919326090534?text=<%= encodeURIComponent(
  'Hi, I would like to order the ' + title + ' (' + price + '). Please share delivery timeline in Mumbai.'
) %>"
   target="_blank"
   class="inline-block border border-zinc-900 px-6 py-2 text-xs tracking-widest uppercase hover:bg-zinc-900 hover:text-white transition duration-300">
   Order Now
</a>

</div>